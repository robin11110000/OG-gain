# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/orbityield

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=OrbitYield

# Polkadot Network Configuration
NEXT_PUBLIC_POLKADOT_NETWORK=development
NEXT_PUBLIC_POLKADOT_RPC_URL=https://westend-rpc.polkadot.io

# Feature Flags
NEXT_PUBLIC_FEATURE_STAKING=true
NEXT_PUBLIC_FEATURE_LENDING=true
NEXT_PUBLIC_FEATURE_FARMING=true
NEXT_PUBLIC_FEATURE_LIQUIDITY=true

# API Keys (Replace with your actual keys in .env.local)
# NEXT_PUBLIC_INFURA_ID=your_infura_id
# NEXT_PUBLIC_ETHERSCAN_API_KEY=your_etherscan_api_key

# Security
JWT_SECRET=your_jwt_secret_key
